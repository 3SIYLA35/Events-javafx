<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="reservationForm" alignment="TOP_CENTER" prefHeight="471.0" prefWidth="300.0" spacing="20.0" style="../../@style/style.css" styleClass="reserForm" AnchorPane.leftAnchor="150.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="demo.quickStart.Controllers.formsControllers.ReservformController" >
    <Label styleClass="label" text="Make a Reservation" />
    
    <Label styleClass="label" text="Date" />
    <DatePicker fx:id="reservationDate" prefWidth="300" styleClass="search_Select" />
    
    <Label styleClass="label" text="Event Name" />
    <TextField fx:id="EventName" prefWidth="300" styleClass="search_Select" />
        
    <Label styleClass="label" text="Id User" />
    <TextField fx:id="iduser" prefWidth="300" styleClass="search_Select" />
    <Label styleClass="label" text="Id Salle" />
    <TextField fx:id="idsalle" prefWidth="300" styleClass="search_Select" />
    <Label styleClass="label" text="Id Terrain" />
    <TextField fx:id="idterrain" prefWidth="300" styleClass="search_Select" />
    
    <Button fx:id="submitBtn" styleClass="add_event"  text="Submit Reservation"/>
      
</VBox>
