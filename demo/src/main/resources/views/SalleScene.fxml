        </Label>
        
        <Button fx:id="add_salle" layoutX="813.0" layoutY="112.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="141.0" styleClass="add_event" text="Ajouter Salle" />
        
    </AnchorPane>
