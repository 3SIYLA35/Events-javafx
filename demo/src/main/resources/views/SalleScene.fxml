<StackPane fx:id="stackpane" xmlns="http://javafx.com/javafx/23.0.1" stylesheets="@style/style.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="demo.quickStart.Controllers.SalleController">

    <AnchorPane fx:id="mainpane" prefHeight="592.0" prefWidth="989.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <TableView fx:id="table_salles" layoutY="172.0" prefHeight="420.0" prefWidth="989.0">
            <columns>
                <TableColumn fx:id="nom_salle" minWidth="193.6" prefWidth="75.0" text="Nom Salle" />
                <TableColumn fx:id="capacite" minWidth="193.6" prefWidth="96.0" text="Capacite" />
