            </columns>
        </TableView>
        <TextField fx:id="get_salle" layoutX="14.0" layoutY="48.0" prefHeight="33.0" prefWidth="736.0" styleClass="search_Select" promptText="Rechercher une Salle..." />
        <Button fx:id="btn_search" layoutX="908.0" layoutY="48.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="60.0" styleClass="btn_filter" onAction="#getsalle" text="Filtrer" />
        
        <Label layoutX="14.0" layoutY="111.0" prefHeight="32.0" prefWidth="193.0" text="Liste des Salles">
            <font>
                <Font name="Arial Bold" size="24.0" />
